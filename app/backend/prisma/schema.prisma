generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  // note: email is used for foreign keys because it is more flexible for jwt issuers
  id Int @id @default(autoincrement())
  email String @unique
  // can be a password hash for some accounts, should contain a $prefix$ indicating
  // the contained type
  token String? @unique
  documents Document[]
}

model Document {
  id Int @id @default(autoincrement())
  name String
  created DateTime @default(now())
  updatedAt DateTime @updatedAt
  jsonContents String
  owner User @relation(fields: [ownerEmail], references: [email])
  ownerEmail String
}

model ClientError{
  id Int @id @default(autoincrement())
  lastOccurrence DateTime @updatedAt
  message String
  stack String
  userAgent String?
  context String
  clientVersion String
  serverVersion String
  count Int @default(1)
  @@unique([message, stack, context, clientVersion, serverVersion])
}

model FeatureTracking {
  id Int @id @default(autoincrement())
  feature String
  context String
  count Int @default(1)
  @@unique([feature, context])
}
