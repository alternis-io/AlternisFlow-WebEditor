{
  "compilerOptions": {
    "outDir": "../lib",
    "noEmit": true,
    "declaration": false,
    "target": "es2015",
    "module": "ES2022",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["DOM", "ScriptHost", "ES2020"],
    "strict": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["**/*.ts"]
}
